<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	width="50%"
	height="50%"
>
	<TableSelectDialog
		noDataText="공정 코드 데이터가 없습니다."
		title="공정 코드"
		search="opiVhSearch"
		searchPlaceholder="찾으시는 공정코드를 입력해주세요."
		confirm="opiVhClose"
		cancel="opiVhClose"
		showClearButton="false"
		items="{
			path : 'opiModel>/',
			sorter : {
				path : 'OperationStandardTextCode',
				descending : false
			}
		}"
		contentHeight="50%"
		contentWidth="50%"
	>
		<ColumnListItem selected="{selectedItem}">
			<cells>
				<Text text="{opiModel>OperationStandardTextCode}" />
				<Text text="{opiModel>OperationStandardTextCodeName}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="공정코드" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="공정코드명" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>